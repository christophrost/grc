  .modal-body
    .row-fluid
      .span6.well
        %ul#clicktoadd2.nav.nav-tabs
          %li.active{:style => "margin-top:9px; margin-bottom:8px;"} Targets for this Audit
        %ul#modalpeopleList.itemlist
          %li.controlSlot.ui-draggable
            .arrowcontrols-group
              .controls-type Product
              .controls-subtype WWW
              .controls-subgroup Gmail
