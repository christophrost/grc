              .controls-type Privacy Statement
              .controls-subtype PDF
              .controls-subgroup 2010
            %a.personItem.removeCircleButton.pull-right
              %i.gcmssmallicon-dash-white
      .span6.well
        %ul#clicktoadd.nav.nav-tabs
          %li
            %a{"data-toggle" => "tab", :href => "#as-product"} Product
          %li
            %a{"data-toggle" => "tab", :href => "#as-bizgrp"} Biz Grp
          %li.active
            %a{"data-toggle" => "tab", :href => "#as-biz"} Biz
          %li
            %a{"data-toggle" => "tab", :href => "#as-systems"} Systems
