          %li.controlSlot.ui-draggable.row-fluid.nominheight{"data-toggle" => "modal", :href => "#referenceSelectorModal"}
            .controls-group.span6.nominheight
              .controls-type PC-2
              .controls-subtype
              .controls-subgroup Traffic Team
            .span6.badges.nominheight
              .span4.nominheight
                .badge.badge-success.fltnone 1/3
              .span4.nominheight
