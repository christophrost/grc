-@title = "GRC: Admin Area"

-content_for :header do
  %ol#breadcrumb
    %li.last
      %a{:href => "programs.htm"} ADMIN AREA
  #pageTitle.location Sys Admin

-content_for :page_help, 'admin_settings'

-content_for :subheader_extras do
  %h1#pageType.pull-right.highlighted Settings &amp; Options

.row-static
  .singleColumn
    / Start of widget
    #companycontrolwidget.WidgetBox
      .WidgetBoxHeading
        %nav
          %a.widgettextbtn{"data-toggle" => "modal", :href => "#"} Edit
        .WidgetTitle.doublewidth System-Wide Settings
      .WidgetBoxContent
        .row-fluid
          .span6.control-group
            %label Company Logo
            %img{:alt => "Default Company Logo", :src => "/images/default/companylogo.png"}/
          .span6.control-group
            %label Company Name
            %input.span12{:placeholder => "Aperture Science", :type => "text"}/
            %br/
            %span.help-inline
            %label Default Version No.
            %input.span12{:placeholder => "1.0", :type => "text"}/
            %br/
            %span.help-inline
        %hr.hr-widget/
        .row-fluid.nominheight
          %a.pull-right.btn.btn-large.btn-info{"data-dismiss" => "modal", :href => "#comingsoonModal"} Settings
    / end of widget
  .doubleColumn
    / Start of widget
    #companycontrolwidget.WidgetBox
      .WidgetBoxHeading
        %nav
          %a.widgettextbtn{"data-toggle" => "modal", :href => "#"} Edit
        .WidgetTitle.doublewidth Options - These are used for Menus
      .WidgetBoxContent
        %hr.hr-widget/
        .row-fluid.nominheight
          %hr.hr-widget/
          %a.pull-right.btn.btn-large.btn-info{"data-dismiss" => "modal", :href => "#comingsoonModal"} View
    / end of widget
