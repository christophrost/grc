                #docdate.date{"data-date" => "02-12-12", "data-date-format" => "dd-mm-yy"}
                  %input.span12.calendar{:size => "16", :type => "text", :value => "02-12-12"}/
                :javascript
                  $('#docdate').datepicker();
              .span5
                %label{:for => "control-code"} Transcriber Name  
                %input#control-code.span12{:disabled => "disabled", :placeholder => "", :type => "text"}
                
