              .span5
                %label{:for => "control-code"} Name of uploaded file  
                %input#control-code.span12{:disabled => "disabled", :placeholder => "1.2", :type => "text"}
                
              .span3
                %label{:for => "control-code"} Doc Date  
                #docdate.date{"data-date" => "02-12-12", "data-date-format" => "dd-mm-yy"}
                  %input.span12.calendar{:size => "16", :type => "text", :value => "02-12-12"}/
                :javascript
                  $('#docdate').datepicker();
              .span2
                %label{:for => "control-code"} Version  
                %input#control-code.span12{:disabled => "disabled", :placeholder => "1.2", :type => "text"}
                
              .span2
                %label{:for => "control-code"} Pages  
                %input#control-code.span12{:disabled => "disabled", :placeholder => "89", :type => "text"}
                

